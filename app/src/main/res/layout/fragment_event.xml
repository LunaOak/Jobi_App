<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:textSize="29sp"
                android:layout_weight="5"
                android:text=""
                android:textColor="@color/home_date2"
                />

            <ImageButton
                android:id="@+id/event_edit_event_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/edit_event_button"
                android:src="@android:drawable/ic_menu_edit" />

        </LinearLayout>

        <TextView
            android:id="@+id/event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text=""/>

        <TextView
            android:id="@+id/event_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=""
            android:textColor="@color/colorAccent2"/>

        <TextView
            android:id="@+id/event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:textSize="20sp"
            android:text=""
            android:textColor="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="16sp"
                android:text="Position Type: "
                android:textColor="@color/colorAccent3"/>

            <TextView
                android:id="@+id/event_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="16sp"
                android:text="Date: "
                android:textColor="@color/colorAccent3"/>

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="16sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            android:text="@string/time_text"
            android:textColor="@color/colorAccent3"/>

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:textSize="16sp" />

    </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="15dp"
            android:background="#c0c0c0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:text="@string/reminders_label"
            android:textColor="@color/colorAccent3"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/event_reminder_recycler_view"
            android:background="@color/colorAccent5">
        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/event_set_reminder_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_alert_white_24dp"
            android:drawableStart="@drawable/ic_add_alert_white_24dp"
            android:text="@string/set_reminder_button"
            android:textColor="@color/colorAccent"
            android:background="@color/colorAccent6"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:text="@string/contacts_label"
            android:textColor="@color/colorAccent3"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/event_contact_recycler_view"
            android:background="@color/colorAccent5">
        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/event_add_contact_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_add_white_24dp"
            android:drawableStart="@drawable/ic_person_add_white_24dp"
            android:text="@string/add_contact_button"
            android:textColor="@color/colorAccent"
            android:background="@color/colorAccent6"/>

    </LinearLayout>

</ScrollView>


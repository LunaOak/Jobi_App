<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_story"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="edu.umd.cs.jobi.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_label"/>

        <EditText
            android:id="@+id/position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/position_hint"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_status"/>

        <RadioGroup
            android:id="@+id/position_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/position_todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position_status_todo"/>
            <RadioButton
                android:id="@+id/position_inProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position_status_inProgress"/>
            <RadioButton
                android:id="@+id/position_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position_status_done"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_location_label"/>

        <EditText
            android:id="@+id/position_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/position_location_hint"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_description_label"/>

        <EditText
            android:id="@+id/position_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/position_description_hint"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_favorite"/>

        <RadioGroup
            android:id="@+id/position_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/position_favorite_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position_favorite_yes"/>
            <RadioButton
                android:id="@+id/position_favorite_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/position_favorite_no"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_type_label"/>

        <EditText
            android:id="@+id/position_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/position_type_hint"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_contact_label"/>

        <EditText
            android:id="@+id/position_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/position_contact_hint"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_company_label"/>

        <EditText
            android:id="@+id/position_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/position_company_hint"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/save_story_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_button"/>

            <Button
                android:id="@+id/cancel_story_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_button"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textSize="40dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"/>

    <!--Current Status-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/status_label"
        android:textSize="20dp"
        android:textColor="@color/colorAccent2"/>

    <RadioGroup
        android:id="@+id/settings_status_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:id="@+id/settings_status_interviewing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_interviewing"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/settings_status_searching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_searching"/>
        <RadioButton
            android:id="@+id/settings_status_not_searching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_not_searching"/>
    </RadioGroup>

    <!--Notifications ON/OFF-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications_label"
            android:textSize="20dp"
            android:textColor="@color/colorAccent2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications_onOff_label"
            android:layout_marginLeft="120dp"/>

        <Switch
            android:id="@+id/settings_notification_switch"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:checked="true"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <!--Type of Notifications-->
    <CheckBox android:id="@+id/interviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interviews_label"
        android:checked="true"/>

    <CheckBox android:id="@+id/emails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emails_label"
        android:checked="true"/>

    <CheckBox android:id="@+id/deadlines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deadline_label"
        android:checked="true"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/settings_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_button"
            android:background="@color/colorWhite"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/settings_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_button"
            android:background="@color/colorWhite"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/position_event_list">

    <TextView
        android:id="@+id/list_item_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:text="Mon, Jan 01 - "
        android:textColor="@color/colorAccent3"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/list_item_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:text="BIG INTERVIEW!"
        android:layout_toRightOf="@id/list_item_event_date"
        android:layout_toEndOf="@id/list_item_event_date"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/list_item_event_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:text="Technical Interview"
        android:layout_toRightOf="@id/list_item_event_date"
        android:layout_toEndOf="@id/list_item_event_date"
        android:layout_below="@id/list_item_event_title"/>

</RelativeLayout>
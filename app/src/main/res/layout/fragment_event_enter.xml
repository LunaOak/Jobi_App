<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/edit_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:textSize="28sp"
            android:text="@string/event_title"
            android:textColor="@color/home_date2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_name_label"
            android:textColor="@color/colorAccent3"/>

        <EditText
            android:id="@+id/event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_name_hint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Company"
            android:textColor="@color/colorAccent3"/>

        <EditText
            android:id="@+id/event_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Company Name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Position"
            android:textColor="@color/colorAccent3"/>

        <EditText
            android:id="@+id/event_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Position Name" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/event_location_label"
            android:textColor="@color/colorAccent3"/>

        <EditText
            android:id="@+id/event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_location_hint"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/event_type_label"
                android:textColor="@color/colorAccent3"/>

            <Spinner
                android:id="@+id/event_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/event_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/event_date_label"
                android:textColor="@color/colorAccent3"
                android:layout_alignBottom="@+id/event_date_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/event_date_text" />

            <TextView
                android:id="@+id/event_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="MON, 01 JAN 2017"
                android:textSize="18sp"
                tools:ignore="RelativeOverlap"
                android:layout_alignBaseline="@+id/event_date_button"
                android:layout_alignBottom="@+id/event_date_button"
                android:layout_toRightOf="@+id/event_date_label"
                android:layout_toEndOf="@+id/event_date_label"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:textColor="@color/colorAccent2"/>

            <Button
                android:id="@+id/event_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_date_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorAccent"
                android:background="@color/colorWhite"/>

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/event_time_label"
                android:id="@+id/textView2"
                android:layout_alignTop="@+id/event_time_text"
                android:textColor="@color/colorAccent3"/>

            <TextView
                android:id="@+id/event_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="11:00AM"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_alignBaseline="@+id/event_time_button"
                android:layout_alignBottom="@+id/event_time_button"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:textColor="@color/colorAccent2"/>

            <Button
                android:id="@+id/event_time_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_time_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap"
                android:textColor="@color/colorAccent"
                android:background="@color/colorWhite"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/save_event_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save_button"
                android:textColor="@color/colorAccent"
                android:background="@color/colorWhite"/>

            <Button
                android:id="@+id/cancel_event_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel_button"
                android:textColor="@color/colorAccent"
                android:background="@color/colorWhite"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>


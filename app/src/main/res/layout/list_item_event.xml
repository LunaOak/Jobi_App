<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/backlog_list">

    <TextView
        android:id="@+id/list_item_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        tools:text="Date"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/list_item_event_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:text="Event Type"

        android:layout_below="@+id/list_item_event_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/list_item_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Event Title"
        android:textColor="@color/colorAccent2"/>


    <TextView
        android:id="@+id/list_item_event_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_event_date"
        android:layout_toStartOf="@id/list_item_event_date"
        android:layout_below="@id/list_item_event_title"
        android:padding="4dp"
        tools:text="Position" />

    <TextView
        android:id="@+id/list_item_event_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:text="Company"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/list_item_event_position"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent2"
        android:layout_below="@id/list_item_event_company"
        android:id="@+id/view" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.umd.cs.jobi">

    <!-- Jobi Application Android Manifest XML File -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Jobi: Home/Main Activity -->
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- All other subsequent Activities -->
        <activity android:name=".CompanyListActivity" />
        <activity android:name=".PositionListActivity" />
        <activity android:name=".PositionActivity" />
        <activity android:name=".StoryActivity" />
        <activity android:name=".SprintActivity" />
        <activity android:name=".EventActivity"></activity>
    </application>

</manifest>
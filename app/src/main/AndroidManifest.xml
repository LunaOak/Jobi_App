<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.umd.cs.jobi">

    <!-- Jobi Application Android Manifest XML File -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Jobi: Home/Main Activity -->
        <activity android:name="edu.umd.cs.jobi.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- All other subsequent Activities -->
        <activity android:name="edu.umd.cs.jobi.CompanyListActivity">
        </activity>

        <activity android:name="edu.umd.cs.jobi.PositionListActivity">
        </activity>

        <activity android:name="edu.umd.cs.jobi.PositionActivity">
        </activity>

        <activity android:name="edu.umd.cs.jobi.StoryActivity">
        </activity>

        <activity android:name="edu.umd.cs.jobi.SettingsActivity">
        </activity>

        <activity android:name="edu.umd.cs.jobi.SprintActivity">
        </activity>

    </application>

</manifest>